<div ng-init="getUsersValue()">
    <br />

    <p ng-hide="isInUpdate">
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Caută în tabel" ng-model="searchPattern"
                   aria-describedby="basic-addon2">
            <div class="input-group-append">
                <span class="input-group-text" id="basic-addon2">Caută</span>
            </div>
        </div>
    </p>

    <div class="table-responsive">
        <table class="table table-sm table-bordered">
            <thead class="alert-primary">
                <tr>
                    <th>
                        Nume utilizator
                    </th>
                    <th>
                        Nume public
                    </th>
                    <th>
                        Tip utilizator
                    </th>
                    <th>
                        Acces
                    </th>
                    <th>
                        Blochează
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in users | filter:searchPattern">
                    <td>
                        {{item.username}}
                    </td>
                    <td>
                        {{item.fullName}}
                    </td>
                    <td>
                        {{item.role}}
                    </td>
                    <td>
                        <div ng-show="item.isBlocked===false">
                            <span class="onlineDot"></span>
                        </div>
                        <div ng-hide="item.isBlocked===false">
                            <span class="offlineDot"></span>
                        </div>
                    </td>
                    <td>
                        <button class="btn btn-link" type="button" ng-show="item.isBlocked===false" ng-click="blockUser(item.username)">
                            Blochează
                        </button>
                        <button class="btn btn-link" type="button" ng-hide="item.isBlocked===false" ng-click="unlockUser(item.username)">
                            Deblochează
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>