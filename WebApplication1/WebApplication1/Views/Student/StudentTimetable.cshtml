
<div ng-init="studentTimetableValue('@User.Identity.Name')">
    <br />
    <p class="text-danger" ng-show="studentDailyTimetable.length===0">
        Astăzi nu aveți cursuri. Verificați orarul complet.
    </p>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="5000" ng-hide="studentDailyTimetable.length===0">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" ng-repeat="item in studentDailyTimetable" ng-if="$index>0" data-slide-to="{{$index}}"></li>
        </ol>
        <div class="carousel-inner border border-primary rounded rounde">
            <div class="carousel-item active">
                <div class="card text-center">
                    <div class="card-body table-primary">
                        <h3 class="card-title text-primary">
                            {{studentDailyTimetable[0].name}}
                        </h3>
                        <h5 class="card-subtitle">
                            {{studentDailyTimetable[0].from}} -> {{studentDailyTimetable[0].to}}
                        </h5>
                        <br />
                        <p class="card-text text-info">
                            Profesor:
                            <span ng-repeat="teacherItem in studentDailyTimetable[0].teacher" ng-hide="$last">
                                <b class="courseTitle" ng-click="navigateToCourses(studentDailyTimetable[0].id, teacherItem)">{{teacherItem}} | </b>
                            </span>
                            <span>
                                <b class="courseTitle" ng-click="navigateToCourses(studentDailyTimetable[0].id, studentDailyTimetable[0].teacher[studentDailyTimetable[0].teacher.length-1])">
                                    {{studentDailyTimetable[0].teacher[studentDailyTimetable[0].teacher.length-1]}}
                                </b>
                            </span>
                        </p>
                        <p class="card-text text-info">
                            Sala: <b>{{studentDailyTimetable[0].hall}}</b>
                        </p>
                        <br />
                    </div>
                </div>
            </div>
            <div class="carousel-item" ng-repeat="item in studentDailyTimetable" ng-if="$index>0">
                <div class="card text-center">
                    <div class="card-body table-primary">
                        <h3 class="card-title text-primary">
                            {{item.name}}
                        </h3>
                        <h5 class="card-subtitle">
                            {{item.from}} -> {{item.to}}
                        </h5>
                        <br />
                        <p class="card-text text-info">
                            Profesor:
                            <span ng-repeat="teacherItem in item.teacher" ng-hide="$last">
                                <b class="courseTitle" ng-click="navigateToCourses(item.id, teacherItem)">{{teacherItem}} | </b>
                            </span>
                            <span>
                                <b class="courseTitle" ng-click="navigateToCourses(item.id, item.teacher[item.teacher.length-1])">{{item.teacher[item.teacher.length-1]}}</b>
                            </span>
                        </p>
                        <p class="card-text text-info">
                            Sala: <b>{{item.hall}}</b>
                        </p>
                        <br />
                    </div>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev" target="_self">
            <i class="fa fa-angle-left text-primary fa-2x"></i>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next" target="_self">
            <i class="fa fa-angle-right text-primary fa-2x"></i>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <br />
    <input type="button" value="Orar complet" class="btn btn-outline-primary" ng-click="studentCompleteTimetablePath()" />
</div>
