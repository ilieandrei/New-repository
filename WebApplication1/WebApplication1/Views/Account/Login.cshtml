@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <!-- Bootstrap Core CSS -->
    <link href="~/layoutfiles/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">


</head>
<body>
    <br /><br /><br />
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">FII Activ</h3>
                        <hr /><br />
                        <h5>Autentificare</h5>
                    </div>
                    <div class="panel-body">
                        <form role="form" asp-action="Login" asp-controller="Account" method="post">
                            <fieldset>
                                <div class="form-group">
                                    <!--modified 29.01-->
                                    <input class="form-group" placeholder="Utilizator" name="username" type="text" required autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-group" placeholder="Parolă" name="password" type="password" required>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <div class="form-group">
                                    <input type="submit" value="Intră" class="btn btn-outline-primary" />
                                </div>
                                <div class="form-group">
                                    <a asp-area="" asp-action="Register" asp-controller="Account">Nu ai cont? Înregistrează-te!</a>
                                </div>
                            </fieldset>
                            <p style="color:red">@Html.ValidationMessage("LoginError")</p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>