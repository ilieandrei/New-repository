                            <a id="teacherTimetableTabId" class="nav-link" href="#!teacherTimetable" style="color:black" ng-click="teacherTimetableTab()">Orar</a>
                        </li>
                        <li class="nav-item">
                            <a id="teacherStatusTabId" class="nav-link" href="#!teacherStatus" style="color:black" ng-click="teacherStatusTab()">Status</a>
                        </li>
                    </ul>
                </div>
            </div>

        </div>
        <div>
            @RenderBody()
        </div>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>