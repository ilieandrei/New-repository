
<!DOCTYPE html>
<html ng-app="myApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/myStyleSheet.css" />
        <script src="~/lib/angular/angular.min.js"></script>
        <script src="~/lib/angular-route/angular-route.js"></script>
        <script src="~/lib/angularjs-md5/src/angularjs-md5.js"></script>
        <script src="~/js/AngularJS/routing.js"></script>
        <script src="~/js/AngularJS/services.js"></script>
        <script src="~/js/AngularJS/Controllers/userController.js"></script>
        <script src="~/js/AngularJS/Controllers/adminController.js"></script>
        <script src="~/js/AngularJS/Controllers/studentController.js"></script>
        <script src="~/js/AngularJS/Controllers/teacherController.js"></script>
        <script src="~/js/AngularJS/Controllers/routeController.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
        <link href="~/lib/components-font-awesome/css/fontawesome-all.css" rel="stylesheet">
        <link rel="stylesheet" href="~/lib/angular-rateit/dist/ng-rateit.css" />
        <script src="~/lib/angular-rateit/dist/ng-rateit.js"></script>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>


</head>

<body>
    <div id="container" ng-controller="userController">
        <div id="header" class="w-100 border-primary border-bottom" style="background-color:aliceblue">
