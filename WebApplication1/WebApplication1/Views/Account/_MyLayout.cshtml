                <h3 class="float-left">FII Activ</h3>
            </a>
            <a asp-area="" asp-controller="Account" asp-action="Logout" class="w-100" ng-show="showBarItem">
                <input type="button" class="btn btn-outline-danger float-right" value="Deconectare"/>
            </a>
            <br />
            @*<div ng-switch="choose" class="w-100">
            <div ng-switch-when="profile">
                <p style="color:wheat">Profil</p>
            </div>
            <div ng-switch-when="timetable">
                <p style="color:wheat">Orar</p>
            </div>
        </div>*@
            <div ng-model="userRole" ng-init="userRoleValue('@User.Identity.Name')"></div>
            <div ng-switch="usrRole">
                <div ng-switch-when="Student">
                    <ul class="nav nav-tabs nav-fill w-100" data-toggle="buttons">
                        <li class="nav-item">
                            <a id="studentProfileTabId" class="nav-link" href="#!studentProfile" style="color:black" ng-click="studentProfileTab()">Profil</a>
                        </li>
                        <li class="nav-item">
                            <a id="studentTimetableTabId" class="nav-link" href="#!studentTimetable" style="color:black" ng-click="studentTimetableTab()">Orar</a>
                        </li>
                        <li class="nav-item">
                            <a id="studentStatusTabId" class="nav-link" href="#!studentStatus" style="color:black" ng-click="studentStatusTab()">Status</a>
                        </li>
                    </ul>
                </div>
                <div ng-switch-when="Teacher">
                    <ul class="nav nav-tabs nav-fill w-100" data-toggle="buttons">
                        <li class="nav-item">
                            <a id="teacherProfileTabId" class="nav-link" href="#!teacherProfile" style="color:black" ng-click="teacherProfileTab()">Profil</a>
                        </li>
