        <input type="text" ng-model="chatMessage" />
        <button ng-click="postChatMessage('@User.Identity.Name')">Post message</button>
        <p>{{chatPostResponse}}</p>
        <ul>
            <li ng-repeat="message in chatMessages">->{{message}}</li>
        </ul>
    </div>
