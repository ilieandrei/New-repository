
<div ng-init="teacherTimetableValue('@User.Identity.Name')">
    <br />
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="5000">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" ng-repeat="item in teacherDailyTimetable" ng-if="$index>0" data-slide-to="{{$index}}"></li>
        </ol>
        <div class="carousel-inner border border-primary rounded rounde">
            <div class="carousel-item active">
                <div class="card text-center">
                    <div class="card-body table-primary">
                        <h3 class="card-title text-primary">
                            {{teacherDailyTimetable[0].name}}
                        </h3>
                        <h5 class="card-subtitle">
                            {{teacherDailyTimetable[0].from}} -> {{teacherDailyTimetable[0].to}}
                        </h5>
                        <p class="card-text text-info">
                            Grupa: <b>{{teacherDailyTimetable[0].group}}</b> | Sala: <b>{{teacherDailyTimetable[0].hall}}</b>
                        </p>
                        <br />
                    </div>
                </div>
            </div>
            <div class="carousel-item" ng-repeat="item in teacherDailyTimetable" ng-if="$index>0">
                <div class="card text-center">
                    <div class="card-body table-primary">
                        <h3 class="card-title text-primary">
                            {{item.name}}
                        </h3>
                        <h5 class="card-subtitle">
                            {{item.from}} -> {{item.to}}
                        </h5>
                        <p class="card-text text-info">
                            Grupa: <b>{{item.group}}</b> | Sala: <b>{{item.hall}}</b>
                        </p>
                        <br />
                    </div>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev" target="_self">
            <i class="fa fa-angle-left text-primary fa-2x"></i>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next" target="_self">
            <i class="fa fa-angle-right text-primary fa-2x"></i>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <br />
    <input type="button" value="Orar complet" class="btn btn-outline-primary" ng-click="teacherCompleteTimetablePath()" />

